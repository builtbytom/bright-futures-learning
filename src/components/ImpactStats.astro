---
import statsData from '../content/impact-stats/stats.json';

const { stats } = statsData;
---

<section class="py-20 bg-gradient-to-r from-rainbow-blue/10 via-rainbow-green/10 to-rainbow-yellow/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-display font-bold text-rainbow">
        Our Impact in Numbers
      </h2>
      <p class="text-xl text-gray-700 mt-4">
        Every number represents a life changed, a future brightened
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {stats.map((stat, index) => (
        <div class="bg-white rounded-3xl p-8 shadow-xl transform hover:scale-105 transition-all duration-300 hover:shadow-2xl">
          <div class={`text-5xl md:text-6xl font-bold text-rainbow-${['red', 'orange', 'yellow', 'green', 'blue', 'purple'][index]} mb-2`}>
            {stat.value}
          </div>
          <div class="text-xl font-display font-bold text-gray-800 mb-2">
            {stat.label}
          </div>
          <p class="text-gray-600">
            {stat.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>