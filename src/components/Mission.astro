---
import homeData from '../content/homepage/home.json';

const { mission } = homeData;

const iconPaths = {
  heart: 'M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z',
  star: 'M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z',
  users: 'M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2M9 11a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75',
  rocket: 'M12 2l2 7h7l-5.5 4 2 7L12 16l-5.5 4 2-7L3 9h7z'
};
---

<section class="py-20 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-display font-bold text-rainbow mb-6">
        {mission.title}
      </h2>
      <div class="max-w-3xl mx-auto">
        <div class="prose prose-lg text-gray-700" set:html={mission.content.replace(/\n/g, '<br />')} />
      </div>
    </div>

    <!-- Values Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-16">
      {mission.values.map((value, index) => (
        <div class="card-rainbow text-center transform hover:scale-105 transition-transform duration-300">
          <div class={`w-20 h-20 mx-auto mb-4 rounded-full bg-rainbow-${['red', 'yellow', 'green', 'blue'][index]}/20 flex items-center justify-center`}>
            <svg class={`w-10 h-10 text-rainbow-${['red', 'yellow', 'green', 'blue'][index]}`} fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[value.icon]} />
            </svg>
          </div>
          <h3 class="font-display text-2xl font-bold mb-2">{value.title}</h3>
          <p class="text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </div>

  <!-- Decorative element -->
  <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2">
    <svg width="200" height="100" viewBox="0 0 200 100" class="text-rainbow-yellow opacity-20">
      <path d="M0,50 Q50,0 100,50 T200,50" stroke="currentColor" stroke-width="3" fill="none" />
    </svg>
  </div>
</section>