---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Get Involved - Bright Futures Learning Center">
  <Navigation />
  <main>
    <!-- Hero Section -->
    <section class="relative py-20 bg-gradient-to-br from-rainbow-yellow/10 to-rainbow-orange/10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl font-display font-bold text-rainbow mb-6">
          Get Involved
        </h1>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          Your support can change a child's life. Choose how you'd like to make a difference.
        </p>
      </div>
    </section>

    <!-- Ways to Help -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Volunteer -->
          <div class="card-rainbow">
            <div class="w-20 h-20 bg-rainbow-green/20 rounded-full flex items-center justify-center mb-6">
              <svg class="w-10 h-10 text-rainbow-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            
            <h2 class="font-display text-3xl font-bold mb-4">Volunteer Your Time</h2>
            <p class="text-gray-700 mb-6">
              Share your love of reading with children who need it most. We provide all training and materials.
            </p>
            
            <h3 class="font-bold text-lg mb-3">Opportunities Include:</h3>
            <ul class="space-y-2 mb-6">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-rainbow-green mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>One-on-one reading tutoring</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-rainbow-green mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Small group activities</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-rainbow-green mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Event support and coordination</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-rainbow-green mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Administrative assistance</span>
              </li>
            </ul>
            
            <a href="/volunteer" class="btn-primary w-full text-center">
              Apply to Volunteer
            </a>
          </div>

          <!-- Donate -->
          <div class="card-rainbow">
            <div class="w-20 h-20 bg-rainbow-yellow/20 rounded-full flex items-center justify-center mb-6">
              <svg class="w-10 h-10 text-rainbow-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            
            <h2 class="font-display text-3xl font-bold mb-4">Make a Donation</h2>
            <p class="text-gray-700 mb-6">
              Your financial support directly funds books, supplies, and program expansion to reach more children.
            </p>
            
            <h3 class="font-bold text-lg mb-3">Your Impact:</h3>
            <ul class="space-y-2 mb-6">
              <li class="flex items-start gap-2">
                <span class="font-bold text-rainbow-yellow">$25</span>
                <span>Provides 5 new books for a child's home library</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="font-bold text-rainbow-yellow">$50</span>
                <span>Funds one month of tutoring for a student</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="font-bold text-rainbow-yellow">$100</span>
                <span>Supplies a complete literacy kit for 3 children</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="font-bold text-rainbow-yellow">$500</span>
                <span>Sponsors an entire classroom for a semester</span>
              </li>
            </ul>
            
            <a href="/donate" class="btn-primary w-full text-center">
              Donate Now
            </a>
          </div>
        </div>

        <!-- Other Ways -->
        <div class="mt-12 bg-gradient-to-r from-rainbow-blue/10 to-rainbow-purple/10 rounded-3xl p-8">
          <h2 class="font-display text-2xl font-bold mb-6 text-center">Other Ways to Support</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-8 h-8 text-rainbow-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <h3 class="font-bold mb-2">Spread the Word</h3>
              <p class="text-gray-700">Share our mission on social media and with your community</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-8 h-8 text-rainbow-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="font-bold mb-2">Corporate Partnership</h3>
              <p class="text-gray-700">Partner with us for employee engagement and CSR initiatives</p>
            </div>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-8 h-8 text-rainbow-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
                </svg>
              </div>
              <h3 class="font-bold mb-2">Book Drives</h3>
              <p class="text-gray-700">Organize book collections at your school or workplace</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section class="py-16 bg-gradient-to-r from-gray-50 to-gray-100">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-display font-bold text-center mb-8">Questions? Let's Talk!</h2>
        <form class="space-y-6 bg-white rounded-3xl p-8 shadow-xl">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
              <input type="text" class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-rainbow-blue focus:outline-none" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
              <input type="text" class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-rainbow-blue focus:outline-none" />
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input type="email" class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-rainbow-blue focus:outline-none" />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">I'm interested in...</label>
            <select class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-rainbow-blue focus:outline-none">
              <option>Volunteering</option>
              <option>Donating</option>
              <option>Corporate Partnership</option>
              <option>Enrolling a Child</option>
              <option>General Information</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
            <textarea rows="4" class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-rainbow-blue focus:outline-none"></textarea>
          </div>
          
          <button type="submit" class="btn-primary w-full">
            Send Message
          </button>
        </form>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>